= breadcrumbs

.news_items{:class => "padded"}
  %h1 New news item

  = error_messages_for :news_item

  - form_for(@news_item, :html => { :multipart => true }) do |f|
    %p
      Image
      %br
      = f.file_field :image
    %p
      Document
      %br
      = f.file_field :doc
    %p
      Headline
      %br
      = f.text_field :headline

    %p
      Content
      = render :partial => "/layouts/textile"
      %br
      = f.text_area :content

    %p= f.submit "Submit"

